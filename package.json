{
  "name": "lookoverlayelectron",
  "version": "1.0.0",
  "description": "Lightweight IDE with Monaco Editor",
  "main": "dist/main.js",
  "scripts": {
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "tsc -p tsconfig.renderer.json",
    "build:css": "npx tailwindcss -i ./src/styles/input.css -o ./dist/styles.css",
    "build": "npm run build:main && npm run build:renderer && npm run build:css",
    "rebuild": "electron-rebuild",
    "postinstall": "electron-rebuild",
    "watch:main": "tsc -p tsconfig.main.json -w",
    "watch:renderer": "tsc -p tsconfig.renderer.json -w",
    "watch:css": "npx tailwindcss -i ./src/styles/input.css -o ./dist/styles.css --watch",
    "watch": "concurrently \"npm run watch:main\" \"npm run watch:renderer\" \"npm run watch:css\"",
    "start": "npm run build && electron ./dist/main.js",
    "dev": "concurrently \"npm run watch:main\" \"npm run watch:renderer\" \"npm run watch:css\" \"electron ./dist/main.js\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.52.0",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "monaco-editor": "^0.44.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0"
  },
  "devDependencies": {
    "@electron/typescript-definitions": "^9.1.2",
    "@types/electron": "^1.4.38",
    "@types/node": "^22.14.1",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "electron": "^35.2.0",
    "electron-rebuild": "^3.2.9",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.15",
    "typescript": "^5.8.3"
  }
}
